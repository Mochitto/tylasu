{
	"name": "@strumenta/ast",
	"description": "Generic AST implementation for TypeScript, inspired by Kolasu and integrated with ANTLR4.",
	"author": "Strumenta s.r.l.",
	"publisher": "strumenta",
	"version": "0.6.3",
	"license": "Apache-2.0",
	"private": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/strumenta/at-strumenta-ast-typescript"
	},
	"files": [
		"dist",
		"src",
		"package.json"
	],
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"dependencies": {
		"@types/node": "^13.9.8",
		"antlr4ts": "^0.5.0-alpha.4",
		"itiriri": "^2.0.1"
	},
	"scripts": {
		"clean": "rimraf dist",
		"build": "tsc",
		"lint": "eslint src tests",
		"build-test-parser": "antlr4ts -o tests/parser -Xexact-output-dir -visitor tests/grammar/SimpleLangLexer.g4 tests/grammar/SimpleLangParser.g4",
		"test": "yarn run build-test-parser && cross-env TS_NODE_PROJECT=tests/tsconfig.json mocha -r ts-node/register tests/**/*.test.ts",
		"dist": "yarn run clean && yarn run lint && yarn run build && yarn run test && yarn pack"
	},
	"devDependencies": {
		"@tsconfig/recommended": "^1.0.1",
		"@types/chai": "^4.2.11",
		"@types/mocha": "^5.2.7",
		"@typescript-eslint/eslint-plugin": "^4.11.0",
		"@typescript-eslint/parser": "^4.11.0",
		"antlr4ts-cli": "^0.5.0-alpha.3",
		"chai": "^4.2.0",
		"cross-env": "^7.0.3",
		"eslint": "^7.16.0",
		"merge-options": "^2.0.0",
		"mocha": "^6.2.2",
		"rimraf": "^3.0.0",
		"ts-loader": "^6.2.2",
		"ts-node": "^8.8.2",
		"typescript": "^3.8.3"
	}
}
