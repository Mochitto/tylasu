{
	"name": "@strumenta/ast",
	"description": "Generic AST implementation for JavaScript, inspired by Kolasu and integrated with ANTLR4.",
	"author": "Strumenta s.r.l.",
	"publisher": "strumenta",
	"version": "0.22.0",
	"license": "Apache-2.0",
	"private": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/strumenta/tylasu"
	},
	"files": [
		"dist",
		"src",
		"package.json"
	],
	"browser": "dist/cjs/index.js",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/types/index.d.ts",
	"bin": {
		"generate-classes": "dist/cli.js"
	},
	"dependencies": {
		"@types/node": "^13.9.8",
		"antlr4ts": "^0.5.0-alpha.4",
		"iter-ops": "^1.5.0",
		"reflect-metadata": "^0.1.13"
	},
	"optionalDependencies": {
		"@types/ecore": "^0.12.3",
		"cmd-ts": "^0.6.9",
		"ecore": "^0.12.0"
	},
	"scripts": {
		"clean": "rimraf dist && rimraf strumenta-ast-v*.tgz",
		"build": "yarn run build:esm && yarn run build:cjs",
		"build:esm": "tsc --module es6 --outDir dist/esm",
		"build:cjs": "tsc --module commonjs --outDir dist/cjs",
		"lint": "eslint src tests",
		"build-test-parser": "antlr4ts -o tests/parser -Xexact-output-dir -visitor tests/grammar/SimpleLangLexer.g4 tests/grammar/SimpleLangParser.g4",
		"test": "yarn run build-test-parser && cross-env TS_NODE_PROJECT=tests/tsconfig.json mocha -r ts-node/register tests/**/*.test.ts",
		"dist": "yarn run clean && yarn run lint && yarn run build && yarn run test && yarn pack",
		"publish-lib": "yarn dist && yarn publish && yarn --use-yarnrc .yarnrc-github-packages publish"
	},
	"devDependencies": {
		"@tsconfig/recommended": "^1.0.1",
		"@types/chai": "^4.2.11",
		"@types/mocha": "^5.2.7",
		"@typescript-eslint/eslint-plugin": "^4.11.0",
		"@typescript-eslint/parser": "^4.11.0",
		"antlr4ts-cli": "^0.5.0-alpha.4",
		"chai": "^4.3.4",
		"cross-env": "^7.0.3",
		"eslint": "^7.16.0",
		"merge-options": "^2.0.0",
		"mocha": "^9.1.3",
		"rimraf": "^3.0.0",
		"ts-loader": "^6.2.2",
		"ts-node": "^8.8.2",
		"typescript": "^3.8.3"
	}
}
