	},
	"files": ["dist", "src", "package.json"],
	"module": "dist/ast.js",
	"types": "dist/ast.d.ts",
	"dependencies": {
		"@types/node": "^13.9.8",
		"antlr4ts": "^0.5.0-alpha.4"
