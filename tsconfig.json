{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": false,
		"strictNullChecks": true,
		"outDir": "./dist",
		"rootDirs": ["src"],
		"declarationDir": "dist/types"
	},
	"include": ["src/index.ts", "src/parsing/index.ts", "src/interop", "src/cli.ts"],
	"exclude": ["node_modules"]
}
