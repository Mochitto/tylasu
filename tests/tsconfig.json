{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"inlineSources": true,
		"isolatedModules": false,
		"module": "ES2022",
		"moduleResolution": "node",
		"noEmit": true,
		"noImplicitOverride": false,
		"removeComments": false,
		"resolveJsonModule": true,
		"rootDirs": [".", "../src"],
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "ES2022",
	},
	"include": [
		"**/*.ts",
	],
	"exclude": [
		"node_modules",
		"dist/**/*",
		"src/**/*"
	]
}
